<?xml version="1.0"?>
<psalm
    errorLevel="5"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
    errorBaseline="psalm-baseline.xml"
>
    <projectFiles>
        <directory name="gatherling" />
        <directory name="tests" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
	<plugins>
		<pluginClass class="Psalm\PhpUnitPlugin\Plugin" />
	</plugins>
	<issueHandlers>
		<!-- Both Components (which use the properties invisibly in the Mustache
             templates) and Dtos (which aren't so thoroughly wired up as to be
			 obvious to Psalm) trigger this one so rather than having hundreds
             of them in the baseline I'll just suppress it entirely. -->
        <PossiblyUnusedProperty errorLevel="suppress" />
    </issueHandlers>
</psalm>
