<center><h3>Changing Your Time Zone</h3></center>
<form action="player.php" method="post">
    <input name="action" type="hidden" value="changeTimeZone" />
    <input name="username" type="hidden" value="{$player->name}" />
    <table class="form">
        <tr>
            <th>Current Time Zone: </th>
            <td>
                {{timeZone}}
            </td>
        </tr>
        <tr>
            <th>Desired Time Zone</th>
            <td>
                {{#timeZoneDropMenu}}{{> dropMenu}}{{/timeZoneDropMenu}}
            </td>
        </tr>
        <tr>
            <td colspan="2" class="buttons">
                <input class="inputbutton" name="submit" type="submit" value="Change Time Zone" />
            </td>
        </tr>
    </table>
</form>
<div class="clear"></div>
